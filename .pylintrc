[MASTER]
persistent=no
extension-pkg-allow-list=
    _ldap,

[MESSAGES CONTROL]
disable=
    missing-docstring,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    invalid-name,
    broad-except,
    broad-exception-caught,
    no-else-return,
    line-too-long,
    no-name-in-module,
    no-member,

[REPORTS]
output-format=colorized
reports=no
msg-template='{path}:{line}: [{msg_id}({symbol}), {obj}] {msg})'